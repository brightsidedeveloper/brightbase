{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES6",
    "module": "CommonJS",
    "jsx": "react",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "types": ["node", "@types/node"],
    "baseUrl": ".",
    "paths": {
      "brightbase": ["node_modules/brightbase"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
